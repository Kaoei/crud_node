<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
    <h1 class="text-center"><%= title %></h1>
    
    <a href="#" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#modalTambah" >Tambah</a>
      <div class="table-responsive w-75 mx-auto">
        <table class="table table-primary">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Nama</th>
                    <th scope="col">kelas</th>
                    <th scope="col">Umur</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>

            <tbody>
                <% let no = 1; %>
                <% for (let d of siswa) { %>
                <tr class="">
                    <td><%= no++ %></td>
                    <td ><%= d.nama %></td>
                    <td ><%= d.kelas %></td>
                    <td ><%= d.umur %></td>
                    <td>
                        <a href="#" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalEdit<%= d._id %>" >Edit</a>
                        <a href="/delete/<%= d._id %>" class="btn btn-danger">Hapus</a>
                     </td>
                </tr>

                 <!-- Modal edit -->
                <div class="modal fade" id="modalTambah" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Tambah data</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">

                            <form action="/tambah" method="POST" class="w-25 mx-auto">
                                <div class="mb-3">
                                  <label for="" class="form-label">Nama</label>
                                  <input type="text" name="nama" class="form-control" placeholder="Nama">
                                </div>
                                
                                <div class="mb-3">
                                    <label for="" class="form-label">Kelas</label>
                                    <select class="form-select form-select-lg" name="kelas" id="">
                                        <option selected disabled>Select one</option>
                                        <option value="X PPLG" >X PPLG</option>
                                        <option value="XI PPLG" >XI PPLG</option>
                                        <option value="XII PPLG">XII PPLG</option>
                                    </select>
                                </div>
                               
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                            </form>
                    </div>
                    </div>
                </div>

                <!-- Modal edit -->
                <div class="modal fade" id="modalEdit<%= d._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Modal Edit</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">

                            <form action="/edit/<%= d._id %>" method="POST" class="w-25 mx-auto">
                                <input type="hidden" name="id" value="<%= d._id %>" class="form-control" placeholder="Nama">

                                <div class="mb-3">
                                  <label for="" class="form-label">Nama</label>
                                  <input type="text" name="nama" value="<%= d.nama %>" class="form-control" placeholder="Nama">
                                </div>
                                
                                <div class="mb-3">
                                    <label for="" class="form-label">Kelas</label>
                                    <select class="form-select" name="kelas" id="">
                                        <option selected disabled>Select one</option>
                                        <option value="X PPLG"<%= d.kelas == "X PPLG" ? 'selected' : '' %> >X PPLG</option>
                                        <option value="XI PPLG"<%= d.kelas == "XI PPLG" ? 'selected' : '' %> >XI PPLG</option>
                                        <option value="XII PPLG"<%= d.kelas == "XII PPLG" ? 'selected' : '' %>>XII PPLG</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label for="" class="form-label">Umur</label>
                                    <input type="text" name="umur" value="<%= d.umur %>" class="form-control" placeholder="umur">
                                  </div>


                               
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                            </form>
                    </div>
                    </div>
                </div>

                <% }; %>
            </tbody>
        </table>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>